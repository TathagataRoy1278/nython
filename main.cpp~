int main()
{
  NTL::Mat<NTL::GF2> a;
  int a = 
  a.SetDims(4, 4);
  a[0][0] = 1;
  a[0][1] = 0;
  a[0][2] = 0;
  a[0][3] = 1;
  a[1][0] = 1;
  a[1][1] = 1;
  a[1][2] = 1;
  a[1][3] = 0;
  a[2][0] = 0;
  a[2][1] = 0;
  a[2][2] = 1;
  a[2][3] = 1;
  a[3][0] = 0;
  a[3][1] = 0;
  a[3][2] = 0;
  a[3][3] = 1;
  to_reduced_row_echelon_form(a);

  for(int i = 0;i<4;i++)
    {
      for(int j = 0;j<4;j++)
	printf("%d, ", rep(a[i][j]));
      printf("\n");
    }
}
